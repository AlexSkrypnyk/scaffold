{
    "name": "alexskrypnyk/scaffold-tests",
    "description": "Tests for Scaffold project functionality.",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://www.drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/alexskrypnyk/scaffold",
    "support": {
        "issues": "https://github.com/alexskrypnyk/scaffold/issues",
        "source": "https://github.com/alexskrypnyk/scaffold"
    },
    "require": {
        "php": ">=8.2",
        "alexskrypnyk/file": "^0.5.4",
        "alexskrypnyk/phpunit-helpers": "^0.4.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.2",
        "drupal/coder": "^8.3.31",
        "ergebnis/composer-normalize": "^2.48.2",
        "laravel/serializable-closure": "^2.0.7",
        "phpstan/phpstan": "^2.1.33",
        "phpunit/phpunit": "^11.5.46",
        "rector/rector": "^2.2.14",
        "symfony/filesystem": "^7.4.0",
        "symfony/finder": "^7.4.0",
        "symfony/process": "^7.4.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "AlexSkrypnyk\\File\\Tests\\": "vendor/alexskrypnyk/file/tests/",
            "AlexSkrypnyk\\Scaffold\\Tests\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "bump-after-update": true,
        "discard-changes": true,
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "phpcs",
            "phpstan",
            "rector --clear-cache --dry-run"
        ],
        "lint-fix": [
            "rector --clear-cache",
            "phpcbf"
        ],
        "test": "phpunit",
        "update-baseline": "UPDATE_FIXTURES=1 phpunit --filter=testInit@baseline",
        "update-fixtures": "UPDATE_FIXTURES=1 phpunit --filter=testInit"
    }
}
